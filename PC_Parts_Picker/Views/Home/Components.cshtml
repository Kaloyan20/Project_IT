@model List<object>
@{
    ViewData["Title"] = "PC Components";

    // Dictionary to store component categories and their icons
    var componentCategories = new Dictionary<string, string>() {
        { "CPUs", "fas fa-microchip" },
        { "Motherboards", "fas fa-server" },
        { "Graphics Cards", "fas fa-photo-video" },
        { "Memory (RAM)", "fas fa-memory" },
        { "Storage (SSDs)", "fas fa-hdd" },
        { "Power Supplies", "fas fa-plug" },
        { "Cases", "fas fa-desktop" },
        { "Coolers", "fas fa-fan" }
    };
}

<!-- Hero Section -->
<section class="hero-section text-white py-5">
    <div class="container text-center py-5">
        <h1 class="display-4 fw-bold mb-4 glow-text">PC Components</h1>
        <p class="lead mb-4">Browse our comprehensive collection of high-quality PC components to build your dream system.</p>
    </div>
</section>

<!-- Category Selection Section -->
<section class="py-5 bg-dark-purple">
    <div class="container">
        <h2 class="text-center text-neon mb-5">Choose a Component Category</h2>
        <div class="row g-4 justify-content-center">
            @foreach (var category in componentCategories)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card h-100 cyber-card border-0 category-card" onclick="navigateToSection('@category.Key.ToLower()')">
                        <div class="card-body text-center p-4">
                            <div class="display-4 text-neon mb-3">
                                <i class="@category.Value"></i>
                            </div>
                            <h3 class="card-title h5 mb-3 text-cyan">@category.Key</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Quick Link to System Builder -->
<section class="py-5 bg-darkest">
    <div class="container text-center">
        <h2 class="text-neon mb-4">Ready to Start Building?</h2>
        <p class="lead mb-4 text-light">Use our system builder to create your custom PC with compatibility checking.</p>
        <a href="@Url.Action("SystemBuilder", "Home")" class="btn btn-neon btn-lg">Go to System Builder</a>
    </div>
</section>

@section Scripts {
    <script>
        // Function to navigate to a specific component section
        function navigateToSection(sectionId) {
            const section = document.getElementById(sectionId);
            if (section) {
                window.scrollTo({
                    top: section.offsetTop - 100,
                    behavior: 'smooth'
                });
            }
        }
    </script>

    <style>
        /* Custom styles for Components page */
        .category-card {
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .category-card:hover {
                transform: translateY(-10px) scale(1.03);
                box-shadow: 0 0 30px rgba(255, 0, 255, 0.6);
            }

        .component-card {
            transition: all 0.3s ease;
        }

            .component-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0 20px rgba(255, 0, 255, 0.5);
            }

        .component-section {
            padding-top: 6rem;
            margin-top: -2rem;
        }

        .cyber-filter select {
            background-color: rgba(26, 16, 37, 0.8);
            border: 1px solid var(--neon-purple);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 4px;
        }

            .cyber-filter select:focus {
                box-shadow: 0 0 0 0.25rem rgba(255, 0, 255, 0.25);
                border-color: var(--neon-pink);
            }

        .card-img-container {
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-img-top {
            max-height: 180px;
            object-fit: contain;
        }
    </style>
}